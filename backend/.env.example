# Affinity 环境变量配置

# 应用配置
APP_NAME=Affinity
DEBUG=false

# 数据库配置
DATABASE_URL=postgresql://affinity:affinity_secret@localhost:5432/affinity

# Redis 配置
REDIS_URL=redis://localhost:6379/0

# Neo4j 配置
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_secret

# Milvus 配置
MILVUS_HOST=localhost
MILVUS_PORT=19530

# JWT 配置
# 生产环境建议使用更强的随机字符串（使用 python -c "import secrets; print(secrets.token_urlsafe(32))" 生成）
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# OpenAI 配置 (支持 OpenAI 兼容 API，如硅基流动)
OPENAI_API_KEY=your-siliconflow-api-key
OPENAI_API_BASE=https://api.siliconflow.cn/v1
OPENAI_MODEL=deepseek-ai/DeepSeek-V3

# CORS 配置 (支持常见前端端口)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:5174","http://localhost:8000","http://127.0.0.1:5173"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Outbox 配置
OUTBOX_MAX_RETRIES=5
OUTBOX_BACKOFF_BASE=2

# SLO 配置
SLO_MEDIAN_LAG_MS=2000
SLO_P95_LAG_MS=30000

# 内容库配置
CONTENT_LIBRARY_IN_CONVERSATION_ENABLED=true

# 内容推荐 RSS 扩展（按行分隔）
CONTENT_RSS_EXTRA_FEEDS=
http://www.xinhuanet.com/politics/news_politics.xml
http://www.xinhuanet.com/fortune/news_fortune.xml
http://www.xinhuanet.com/world/news_world.xml
https://36kr.com/feed
https://www.huxiu.com/rss/0.xml
https://sspai.com/feed
https://www.ithome.com/rss/
https://www.ifanr.com/feed
https://www.v2ex.com/index.xml
http://www.geekpark.net/rss
https://tech.meituan.com/feed
https://tech.youzan.com/rss/

CONTENT_PUBLISHER_WEIGHTS=36kr=1.0,sspai=0.95,ithome=0.9,huxiu=0.85,xinhuanet=0.3

# Tavily 联网搜索
TAVILY_ENABLED=true
TAVILY_API_KEY=your-tavily-api-key
TAVILY_MAX_RESULTS=5
TAVILY_SEARCH_DEPTH=basic
TAVILY_INCLUDE_ANSWER=true

# 表情包系统配置
# 微博 API 配置（MVP：仅微博）
WEIBO_API_KEY=your-weibo-api-key
WEIBO_API_BASE_URL=https://api.weibo.com/2

# 表情包安全筛选
MEME_SAFETY_SCREENING_ENABLED=true

# 表情包聚合频率（小时）
MEME_SENSOR_INTERVAL_HOURS=1

# 表情包趋势更新频率（小时）
MEME_TREND_UPDATE_INTERVAL_HOURS=2

# 表情包归档阈值（天数）
MEME_ARCHIVAL_DECLINING_DAYS=30

# 表情包去重检查
MEME_DUPLICATE_CHECK_ENABLED=true
